<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<!-- 일반회원의 페이지 설정 -->
	<definition name="baseLayout" template="/WEB-INF/views/template/base_template.jsp">
		<put-attribute name="title" value="Shop"/> <!-- 페이지 이름 -->
		<put-attribute name="menu" value="/WEB-INF/views/template/menu.jsp"/>
		<put-attribute name="body" value=""/> <!-- undefined -->
	</definition>
	
				<!-- item/item_list -->
	<definition name="*/*" extends="baseLayout">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/> <!-- 폴더명, 파일명 자리를 비워둠 -->
	</definition>
	
</tiles-definitions>















